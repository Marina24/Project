<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:id="@+id/linear_layout_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_alarm_white" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_query_builder_white" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_hourglass_full" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_timer_white" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_more_vert_white" />

    </LinearLayout>

    <EditText
        android:id="@+id/edit_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_time"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/space_header"
        android:drawableRight="@drawable/ic_backspace_white"
        android:ems="10"
        android:hint="@string/text_time"
        android:inputType="time"
        android:textColorHint="@color/colorWhite"
        android:textSize="@dimen/size_time" />

    <TableRow
        android:id="@+id/table_line_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_time"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/space_header">

        <Button
            android:id="@+id/btn_time_one"
            style="?attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/text_btn_one"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/size_number" />

        <Button
            android:id="@+id/btn_time_two"
            style="?attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/text_btn_two"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/size_number" />

        <Button
            android:id="@+id/btn_time_three"
            style="?attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/text_btn_three"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/size_number" />

    </TableRow>

    <TableRow
        android:id="@+id/table_line_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/table_line_first"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin">

        <Button
            android:id="@+id/btn_time_four"
            style="?attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/text_btn_four"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/size_number" />

        <Button
            android:id="@+id/btn_time_five"
            style="?attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/text_btn_five"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/size_number" />

        <Button
            android:id="@+id/btn_time_six"
            style="?attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/text_btn_six"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/size_number" />

    </TableRow>

    <TableRow
        android:id="@+id/table_line_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/table_line_two"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin">

        <Button
            android:id="@+id/btn_time_seven"
            style="?attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/text_btn_seven"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/size_number" />

        <Button
            android:id="@+id/btn_time_eight"
            style="?attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/text_btn_eight"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/size_number" />

        <Button
            android:id="@+id/btn_time_nine"
            style="?attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/text_btn_nine"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/size_number" />

    </TableRow>

    <Button
        android:id="@+id/btn_time_zero"
        style="?attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/table_line_three"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:text="@string/text_btn_zero"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/size_number" />

</RelativeLayout>